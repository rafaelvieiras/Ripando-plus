{
  "manifest_version": 2,

  "name": "Ripando Plus",
  "description": "Extensão voltada para adicionar funcionalidades e elementos que facilitam a navegação no site Ripando.com.br",
  "version": "1.1",
  "options_page": "app/index.html",
  "icons": { "16": "img/icon.png",
           "48": "img/icon.png",
          "128": "img/icon.png" },

  "permissions": [
    "storage",
    "contextMenus",
    "http://*.ripando.com.br/*"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "app/index.html#popup"
  },
  "content_scripts": [
    {
      "matches": ["http://*.ripando.com.br/*"],
      "js": [ "jquery.min.js", "main.js"],
      "css": ["main.css"]
    }
  ],
  "background": {
    "scripts": ["chrome.js"]
  }
}
