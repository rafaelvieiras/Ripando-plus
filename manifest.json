{
  "manifest_version": 2,

  "name": "Ripando Plus",
  "description": "Extensão voltada para adicionar funcionalidades e elementos que facilitam a navegação no site Ripando.com.br",
  "version": "1.0",
  "icons": { "16": "img/icon.png",
           "48": "img/icon.png",
          "128": "img/icon.png" },

  "permissions": [
    "http://*.ripando.com.br/*",
    "storage"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*.ripando.com.br/*"],
      "js": [ "jquery.min.js", "main.js"],
      "css": ["main.css"]
    }
  ]
}
